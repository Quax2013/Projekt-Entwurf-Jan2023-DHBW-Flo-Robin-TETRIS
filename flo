void createField()
{
    system("cls");
    gotoxy(0,0);
    printf("   Tetris   \n");
    for(int i = 0; i <= HEIGHT; i++)
    {
        printf("|");
        for(int j = 0; j <= WIDTH; j++)
        {
            printf(" ");
        }
        printf("|\n");
    }
    for(int i = 0; i <= WIDTH; i++)
    {
        printf("-");
    }
}
